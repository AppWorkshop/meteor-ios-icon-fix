<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="meteor-ios-icon-fix" version="1.0.0">
    <name>Meteor iOS Icon Fix</name>
    <description>Fixes the issue where meteor/cordova copies old cordova icons for iOS 5 and 6, and doesn't include a marketing icon</description>
    <license>MIT</license>
    <keywords>cordova,meteor,ios,icon,icons,marketing,xcode</keywords>
    <author>Mike Cunneen - The App Workshop</author>
    <repo>https://github.com/AppWorkshop/meteor-ios-icon-fix.git</repo>
    <engines>
        <engine name="cordova" version=">=5.4.1" />
        <engine name="cordova-ios" version=">=4.0.0" />
        <engine name="apple-ios" version=">=10.0" />
        <engine name="apple-xcode" version=">=7.2" />
    </engines>
    
    <platform name="ios">
        <hook type="after_prepare" src="scripts/afterBuild.js" />
    </platform>

</plugin>
